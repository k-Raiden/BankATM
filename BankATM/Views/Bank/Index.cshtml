    <h1 class="display-4">Clients List</h1>
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table">
                <tr>
                    <th>Account holders details</th>
                    <th> User Id</th>
                    <th>Account Number</th>
                </tr>

                @foreach (CustomersInfo account in Model.CustomersList)
                {
                    <tr>
                        <td><button type="button" onclick="javascript:openLocation('/Bank/Login/@account.CustomerId')" class="btn btn-secondary btn-sm">Log In</button></td>
                        <td><button type="button" onclick="javascript:openLocation('/Bank/DepositView/@account.CustomerId')" class="btn btn-secondary btn-sm">Deposit</button></td>
                        <td><button type="button" onclick="javascript:openLocation('/Bank/WithdrawView/@account.CustomerId')" class="btn btn-secondary btn-sm">Withdraw</button></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div id="deleteModal" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">CONFIRM DELETE</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this contact?</p>
                <button type="button" onclick="javascript:cancelDelete()" class="btn btn-secondary btn-sm">CANCEL</button>
                <button type="button" onclick="javascript:deleteContact()" class="btn btn-danger btn-sm">DELETE</button>
            </div>
        </div>
    </div>
</div>

